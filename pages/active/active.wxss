/* pages/active/active.wxss */
.header{
  background:#1296db;
  height:80rpx;
}

.header text{
  display: block;
  text-align: center;
  color: #fff;
  font-size:36rpx;
}

.active-name{
  width:240rpx;
  margin:16px auto;
  padding-bottom: 2px;
  border-bottom:2px solid #ccc;
}

.active-name text{
  display: block;
  width:240rpx;
  text-align: center;
  margin:0 auto;
  font-weight: 800;
  border-bottom:3px solid #000;
}

.active-item{
  position: relative;
  margin-top:20px;
  border:1px solid #ccc;
  padding-top: 10px;
  padding-bottom: 10px;
}

.active-item .title{
  display: block;
  margin:5px;
  font-weight:800;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.active-item .intro{
  display: block;
  margin:5px;
  font-size:14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.active-item .new_price{
  color:red;
  margin:5px;
}

.active-item .old_price{
  color:#ccc;
  margin:5px;
  text-decoration: line-through;
}

.active-item .count{
  position: absolute;
  right:5px;
  font-size:14px;
}

.active-item .down_time{
  text-align: right;
  font-size:12px;
  margin-right:10px;
}