/* pages/car/car.wxss */
.item{
  position: relative;
  display: block;
  height:120px;
  border-bottom: 1px solid #ccc;
}
.item .photo{
  position: relative;
  display: inline-block;
  width:30%;
  height:100%;
}
.item .photo image{
  display: block;
  width:80px;
  height:80px;
  margin:0 auto;
  position: relative;
  border:1px solid yellow;
  top:18px;

}

.item .data{
  display: inline-block;
  width:70%;
  height:100%;
}

.item .data .line{
  margin-top:10px;
}

.item .data .price{
  color:red;
}

.item .data .count{
  position: relative;
  display: inline-block;
  top:6px;
  width:80px;
  height:24px;
  border:1px solid #ccc;
  margin-left:30px;
  margin-right:30px;
}
.item .data .count .num{
  position: relative;
  display: inline-block;
  top:-7px;
  width:30px;
  height:24px;
  line-height:24px;
  font-size:12px;
  border:1px solid #ccc;
  text-align: center;
  border-top:none;
  border-bottom: none;
}
.item .data .count button{
  display: inline-block;
}

.item .data .delete{
  margin: 0;
  padding:0;
  display: inline-block;
  background: transparent;
  border:none;
  width:20px;
  height:20px;
  line-height: 20px;
}
button{
  margin: 0;
  padding:0;
  border-radius:0;
  background: transparent;
  border:none;
  width:24px;
  height:24px;
  line-height: 24px;
}
button::after{
  border: none;
}

 .item .data .delete image{
  width:20px;
  height:20px;
 }
 
.info{
  position: fixed;
  bottom: 0;
  border-top:1px solid #ddd;
  width:100%;
  height:40px;
  line-height:40px;
}
.info text{
  padding-left: 10px;
}
.info .order{
  position: absolute;
  display: inline-block;
  width:80px;
  height:28px;
  top:6px;
  right:10px;
  line-height: 28px;
  background: #FF8700;
  border-radius: 5px;
  color: #fff;
  text-align: center;
}