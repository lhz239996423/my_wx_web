/* pages/mine/mine.wxss */
.header{
  background:#1296db;
  height:80rpx;
}

.header text{
  display: block;
  text-align: center;
  color: #fff;
  font-size:36rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:100rpx 0;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.item view{
  position: relative;
  border: 1px solid #cccccc;
  background-size: 20px;
}

.item view~view{
  border-top:none;
}

.item view text{
  display: inline-block;
  padding:30rpx;
  color:#666;
}
.item view image{
  position: absolute;
  width:80rpx;
  height:80rpx;
  top: 50%;
  right: 20rpx;
  margin-top: -40rpx; 
  margin-left: -40rpx; 
}

