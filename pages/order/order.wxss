/* pages/order/order.wxss */
page{
  background:#ccc;
}
.userInfo{
  position: relative;
  background: #fff;
  padding: 8px;
  margin-bottom: 10px;
}

.icon{
  position: relative;
  display: inline-block;
  margin:-10px 15px 0 10px;
}

.icon image{
  position: relative;
  top:-12px;
  height:22px;
  width:22px;
}

.info{
  display: inline-block;
}

.userInfo .nick_name{
  margin-right: 5px;
}

.userInfo .tel{
  margin-left: 5px;
}

.userInfo .address{
  font-size: 12px;
  display: block;
}

.right{
  position: absolute;
  right:0;
  display: inline-block;
}

.right image{
  position: relative;
  top:6px;
  height:22px;
  width:22px;
}

.orderInfo{
  position: relative;
  background: #fff;
  margin-bottom: 10px;
}

.table{
  border:1px solid #ccc;
  width:100%;
  background: #f8f8f8;
}

.tr{
  width:100%;
  display: flex;
  border-bottom: 1px solid #fff;
}

.tr:first-child{
  border-bottom: 1px solid #ccc;
}

.tr .th:first-child,.tr .td:first-child{
  width:50%;
}

.th,.td{
  width:20%;
  padding:10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.input{
  padding:10px;
  background: #fff;
}

.pay{
  position: fixed;
  bottom: 0;
  border-top:1px solid #ddd;
  width:100%;
  height:50px;
  line-height:50px;
  background: #fff;
}
.pay text{
  padding-left: 10px;
}
.pay .order{
  position: absolute;
  display: inline-block;
  width:100px;
  height:30px;
  top:10px;
  right:10px;
  line-height: 30px;
  background: #FF8700;
  border-radius: 5px;
  color: #fff;
  text-align: center;
}